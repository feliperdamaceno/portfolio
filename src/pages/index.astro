---
import '@/scss/main.scss'
import { RootLayout } from '@/layouts'
import { Intro, Skills, Experiences, Projects, Footer } from '@/components'
---

<RootLayout title="Felipe Damaceno">
  <main>
    <Intro />

    <div class="flow">
      <Skills />
      <Experiences />
      <Projects />
      <Footer />
    </div>
  </main>
</RootLayout>

<style lang="scss">
  main {
    overflow: hidden;
  }

  .flow {
    --spacing: 6rem;

    @media (min-width: 800px) {
      --spacing: 10rem;
    }
  }
</style>
